// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type clientsAppointments {
  stylist_name String
  appointment_date String
  hours Int
  price String
  service String
 deposit String
 created_at DateTime ? @default(now())
}

type stylistsAppointments {
  client_name String
  appointment_date String
  hours Int
  service String
}

type Services {
  name String
}

model clients {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  client_name String
  phone_number String
  email String
  appointments clientsAppointments[]

}

model stylists {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  services Services[]
  email String
  appointments stylistsAppointments[]
  phone_number String

}

